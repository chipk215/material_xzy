<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"

    android:layout_marginTop="@dimen/half_padding_norm"
    android:layout_marginStart="@dimen/half_padding_norm"
    android:layout_marginEnd="@dimen/half_padding_norm"
    android:layout_marginBottom="@dimen/half_padding_norm"

    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="card_corner_radius"
    android:clickable="true"
    android:focusable="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <include layout="@layout/image_thumbnail" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_norm"
            android:paddingTop="@dimen/padding_norm"
            android:paddingRight="@dimen/padding_norm"
            android:paddingBottom="@dimen/small_bottom_padding"
            android:textColor="@color/primaryTextColor"
            android:ellipsize="end"
            android:maxLines="4" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_norm"
            android:paddingRight="@dimen/padding_norm"
            android:paddingBottom="@dimen/padding_norm"
            android:textColor="@color/sub_title_textColor"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
